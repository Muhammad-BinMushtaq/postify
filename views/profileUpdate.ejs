<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Profile Upload</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="min-h-screen bg-gradient-to-br from-gray-900 to-gray-800 flex items-center justify-center px-4">

  <form 
    action="/upload-profile" 
    method="POST" 
    enctype="multipart/form-data"
    class="bg-white shadow-2xl rounded-3xl p-8 w-full max-w-sm space-y-6"
  >
    <h2 class="text-center text-2xl font-bold text-gray-800">Upload Profile</h2>

    <!-- Profile Picture Placeholder -->
    <div class="flex justify-center">
      <div class="w-32 h-32 rounded-full bg-gray-200 border-4 border-dashed border-gray-400 flex items-center justify-center text-gray-500 text-sm">
        Profile Image
      </div>
    </div>

    <!-- File Upload -->
    <div class="flex flex-col items-center space-y-2">
      <label 
        for="profilePic" 
        class="cursor-pointer inline-block bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-2 px-4 rounded-full transition duration-300"
      >
        Choose Photo
      </label>
      <input 
        type="file" 
        name="profile" 
        id="profilePic" 
        accept="image/*" 
        class="hidden peer" 
        required
      />
      <p class="text-xs text-gray-500 peer-invalid:hidden">Only image files allowed</p>
    </div>

    <!-- Submit Button -->
    <div class="text-center">
      <button 
        type="submit" 
        class="w-full bg-green-500 hover:bg-green-600 text-white font-semibold py-2 px-6 rounded-xl transition duration-300"
      >
        Upload
      </button>
    </div>
  </form>

</body>
</html>
